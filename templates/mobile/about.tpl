{%block name="page_script"%}
<script>
(function() {
$('.more').each(function() {
	var $desc = $(this).prev(), desc = $desc.text();
	if (desc.length > 40) {
		$desc[0].dataset.desc = desc;
		$desc.text(desc.substr(0, 40) + '...');
	} else {
		$(this).remove();
	}

}).tap(function() {
	var $desc = $(this).prev(), desc = $desc[0].dataset.desc;
	$desc.text(desc);
	$(this).remove();
});

//排队加载图片
var dataList = [], imageList = $('.member');
imageList.each(function(index) {
	dataList.push({
		src: $(this).data('src'),
		idx: index
	});
});
var preload = function() {
	if (dataList.length == 0) return;
	var image = new Image(), data = dataList.shift();
	image.onload = function() {
		preload();
		imageList[data.idx].src = data.src;
	};
	image.onerror = function() {
		dataList.push(data);
		preload();
	}
	image.src = data.src;
};
preload();

})();
</script>
